{
  "tasks": {
    "build": "silverbullet plug:compile -c deno.jsonc flashcard.plug.yaml",
    "watch": "silverbullet plug:compile -c deno.jsonc flashcard.plug.yaml -w"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "exclude": [
      "*.md",
      "**/*.md",
      "*.plug.js"
    ]
  },
  "imports": {
    "@silverbulletmd/silverbullet": "jsr:@silverbulletmd/silverbullet@^0.10.1",
    "ts-fsrs": "npm:ts-fsrs@4.4.3",
  }
}
